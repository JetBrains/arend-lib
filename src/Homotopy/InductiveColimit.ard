\import Homotopy.Pointed \using (Pointed \as HPointed)

\data InductiveColim(X : \Pi (n : Nat) -> HPointed) (f : \Pi (n : Nat) -> X n ->* X (suc n))
  | in (i : Nat)(x : X i) : InductiveColim X f
  | coglue (i : Nat) (x : X i) : in i x = in (suc i) ((f i).1 x)
  \where {
    \func pointed : HPointed (InductiveColim X f) {| base => in 0 (HPointed.base {X 0})}  \cowith
  }