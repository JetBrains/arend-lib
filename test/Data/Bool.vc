\open Data.Unit
\open Data.Empty

\data Bool | true | false

\function
True (b : Bool) : \Prop <= \elim b
    | true => Unit
    | false => Empty

\function
not (b : Bool) : Bool <= \elim b
    | true => false
    | false => true

\function
if {A : \Type0} (b : Bool) (then else : A) : A <= \elim b
    | true => then
    | false => else

\function
xor (x y : Bool) : Bool <= if x (not y) y

\function
and (x y : Bool) : Bool <= if x y false

\function
or  (x y : Bool) : Bool <= if x true y
